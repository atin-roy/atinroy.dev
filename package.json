{
  "name": "atinroy.dev",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.28.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "pnpm -r --filter \"./apps/*\" dev",
    "build": "pnpm -r build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "clean": "rm -rf node_modules apps/*/node_modules labs/**/node_modules apps/*/target labs/**/target"
  },
  "devDependencies": {
    "prettier": "^3.7.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "sharp",
      "unrs-resolver"
    ]
  }
}
